@model List<User>

@{
    ViewBag.Title = "Permissions";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<h2>Permissions</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td> 
                <td>@user.Username</td>  
                <td>@user.Email</td>  
                <td>@user.Role</td>
                <td>
                    <button>
                        <i class="bi bi-pencil"></i>
                    </button>
                    <button>
                        <i class="bi bi-trash"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
