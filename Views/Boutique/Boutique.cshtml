<head>
    <meta charset="UTF-8">
    <title>Chamb - Responsive E-commerce HTML5 Template</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!--enable mobile device-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--fontawesome css-->
    <link rel="stylesheet" href="~/css/chamb/css/font-awesome.min.css">
    <!--bootstrap css-->
    <link rel="stylesheet" href="~/css/chamb/css/bootstrap.min.css">
    <!--animate css-->
    <link rel="stylesheet" href="~/css/chamb/css/animate-wow.css">
    <!--main css-->
    <link rel="stylesheet" href="~/css/chamb/css/style.css">
    <link rel="stylesheet" href="~/css/chamb/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="~/css/chamb/css/slick.min.css">
    <!--responsive css-->
    <link rel="stylesheet" href="~/css/chamb/css/responsive.css">
</head>
<body>
    <!-- Modal -->
    
    <div class="page-content-product">
        <div class="main-product">
            <div class="container">
                <div class="row clearfix">
                    <div class="find-box">

                        <h1>Pick something u freak</h1>
                        <div class="product-sh">
                            <div class="col-sm-6">
                                <div class="form-sh">
                                    <input type="text" placeholder="Search perks">
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group text-center">
                                    <p class="mb-0" style="color: white;"><a href="~/Boutique/AddProduct">Ajouter item</a></p>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-sh"> <a class="btn" href="#">Search</a> </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-lg-3 col-sm-6 col-md-3">
                        <a href="productpage.html">
                            <div class="box-img">
                                <h4>Bronze</h4>
                                <img src="~/images/PerkBronze.webp" alt="" style="width:108px; height:112px" />
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-md-3">
                        <a href="productpage.html">
                            <div class="box-img">
                                <h4>Silver</h4>
                                <img src="~/images/PerkSilver.webp" alt="" style="width:108px; height:112px"  />
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-md-3">
                        <a href="productpage.html">
                            <div class="box-img">
                                <h4>Gold</h4>
                                <img src="~/images/PerkGold.webp" alt="" style="width:108px; height:112px" />
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-md-3">
                        <a href="productpage.html">
                            <div class="box-img">
                                <h4>Crystal</h4>
                                <img src="~/images/PerkCrystal.webp" alt="" style="width:108px; height:112px" />
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-md-3">
                        <a href="productpage.html">
                            <div class="box-img">
                                <h4>Master</h4>
                                <img src="~/images/PerkMaster.png" alt="" style="width:108px; height:112px"  />
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-md-3">
                        <a href="productpage.html">
                            <div class="box-img">
                                <h4>Champion</h4>
                                <img src="~/images/PerkChampion.png" alt="" style="width:108px; height:112px" />
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-md-3">
                        <a href="productpage.html">
                            <div class="box-img">
                                <h4>SOFA</h4>
                                <img src="~/css/chamb/images/product/12.png" alt="" style="width:108px; height:112px"  />
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-md-3">
                        <a href="productpage.html">
                            <div class="box-img">
                                <h4>DIVan</h4>
                                <img src="~/css/chamb/images/product/13.png" alt="" style="width:108px; height:112px"  />
                            </div>
                        </a>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
   
    <!--main js-->
    <script src="~/css/champ/js/jquery-1.12.4.min.js"></script>
    <!--bootstrap js-->
    <script src="~/css/champ/js/bootstrap.min.js"></script>
    <script src="~/css/champ/js/bootstrap-select.min.js"></script>
    <script src="~/css/champ/js/slick.min.js"></script>
    <script src="~/css/champ/js/wow.min.js"></script>
    <!--custom js-->
    <script src="~/css/champ/js/custom.js"></script>

</body>
</html>