@model Projet_Finale.Models.Product
@using (Html.BeginForm("AddProduct", "Products", FormMethod.Post, new { @class = "card-body" }))
{
    <link rel="stylesheet" href="~/css/Login.css">
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Description)
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Price)
        @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ImagePath)
        @Html.TextBoxFor(model => model.ImagePath, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Available)
        @Html.CheckBoxFor(model => model.Available)
    </div>
    <button type="submit" class="btn btn-primary btn-block btn-custom">Ajouter</button>
}
